package java0110;

import java.util.Scanner;

public class ex09 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			
			String[] str;
			
			System.out.println("-------------------------------------------------");
			System.out.println("1. 학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분석 | 5. 종료");
			System.out.println("-------------------------------------------------");
			
			System.out.print("선택> ");
			String ch = sc.nextLine();
			
			switch(ch) {
			case "1" :
				System.out.print("학생수> ");
				int a = sc.nextInt();
				str = new String[a];
			}
		}
	}
}